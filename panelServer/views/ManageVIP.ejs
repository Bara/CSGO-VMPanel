<%- include('Header.ejs') %>

<div class="content">
  <div class="container-fluid">
    <div class="row">

      <%- include('SteamDataFetchTool.ejs') %>

      <div class="col-md-6">
        <div class="card">
          <div class="card-header card-header-danger">
            <h4 class="card-title">Add VIP</h4>
            <p class="card-category">Form to add a new VIP in Server</p>
          </div>
          <div class="card-body">
            <form>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">Enter Steam ID</label>
                    <input id="steamId_add" type="text" class="form-control" value="STEAM_X:Y:Z" required>
                  </div>
                  <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">Enter User Name</label>
                    <input id="name_add" type="text" class="form-control" required>
                  </div>
                  <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">Enter Days to ADD</label>
                    <input id="day_add" type="number" class="form-control" required>
                  </div>
                  <div class="form-group bmd-form-group">
                    <label class="">Select Servers to add in</label>
                    <div class="col-md-12 row">
                      <% if(serverList) {%>
                      <% for(let i=0; i < serverList.length; i++) { %>
                      <div class="col-md-3">
                        <input class="form-check-input" type="checkbox" name="server_add" value="<%=serverList[i]%>"
                          id="<%='server_add'+i%>">
                        <label class="form-check-label" for="<%='server_add'+i%>">
                          <%=serverList[i].toUpperCase()%>
                        </label>
                      </div>
                      <%}}%>
                    </div>
                  </div>
                </div>
              </div>
              <button type="button" onclick="addNewVIPajax()" class="btn btn-success pull-right">ADD VIP</button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <div class="card-header card-header-danger">
            <h4 class="card-title">Update VIP</h4>
            <p class="card-category">Form to Extend days for an old VIP</p>
          </div>
          <div class="card-body">
            <form>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">Enter Steam ID</label>
                    <input id="steamId_update" type="text" class="form-control" value="STEAM_X:Y:Z" required>
                  </div>
                  <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">Enter Days to Extend</label>
                    <input id="day_update" type="number" class="form-control" required>
                  </div>
                  <div class="form-group bmd-form-group">
                    <label class="">Select Servers to add in</label>
                    <div class="col-md-12 row">
                      <% if(serverList) {%>
                      <% for(let i=0; i < serverList.length; i++) { %>
                      <div class="col-md-3">
                        <input class="form-check-input" type="checkbox" name="server_update" value="<%=serverList[i]%>"
                          id="<%='server_update'+i%>">
                        <label class="form-check-label" for="<%='server_update'+i%>">
                          <%=serverList[i].toUpperCase()%>
                        </label>
                      </div>
                      <%}}%>
                    </div>
                  </div>
                  <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating"></label>
                    <input type="text" class="form-control" disabled>
                  </div>
                </div>
              </div>
              <button type="button" onclick="updateOldVIPajax()" class="btn btn-success pull-right">UPDATE VIP</button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-danger">
            <h4 class="card-title">View and Manage VIP</h4>
            <p class="card-category">Select a server to view the list</p>
          </div>
          <div class="card-body">
            <form class="col-md-4">
              <div class="form-group bmd-form-group">
                <label class="bmd-label-floating">Select Server</label>
                <select class="form-control" id="server_update"
                  onchange="getVIPTableListing(this.options[this.selectedIndex].value)">
                  <option value="" selected>Select Server</option>
                  <% if(serverList) {%>
                  <% for(let i=0; i < serverList.length; i++) { %>
                  <option value="<%=serverList[i]%>"><%=serverList[i].toUpperCase()%></option>
                  <%}}%>
                </select>
              </div>
            </form>
            <hr />
            <div class="table-responsive">
              <table class="table" id="manageVipTable">
                <thead class=" text-primary">
                  <th>Steam ID</th>
                  <th>Name</th>
                  <th>Flags</th>
                  <th>Sub. Start Date</th>
                  <th>Sub. End Date</th>
                  <th>Days Left</th>
                  <th>Actions</th>
                </thead>
                <tbody id="manageVipTableBody">
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<%- include('Footer.ejs') %>

<script src="./js/ManageVIP.js"></script>
<script src="./js/customConfirm.js"></script>
<script src="./js/notifications.js"></script>
<script src="./js/steamIdFinder.js"></script>
<script src="./js/steamIdOperations/BigInteger.min.js"></script>
<script src="./js/steamIdOperations/converter-min.js"></script>